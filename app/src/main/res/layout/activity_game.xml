<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    android:orientation="vertical"
    tools:context="com.blackcode.ru.boss.GameActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Progress_bar1"
        android:src="@drawable/img" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Progress_bar2"
        android:src="@drawable/img" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/img" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Progress_bar4"
        android:src="@drawable/img" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Progress_bar3"
        android:src="@drawable/img" />

    <ProgressBar
        android:id="@+id/Progress_bar1"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="286dp"
        android:layout_height="60dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="33dp"
        android:max="100"
        android:min="0"
        android:progress="20" />

    <ProgressBar
        android:id="@+id/Progress_bar2"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="286dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Progress_bar1"
        android:layout_marginEnd="33dp"
        android:max="100"
        android:min="0"
        android:progress="30" />

    <ProgressBar
        android:id="@+id/Progress_bar3"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Progress_bar2"
        android:layout_marginEnd="33dp"
        android:max="100"
        android:min="0"
        android:progress="40" />

    <ProgressBar
        android:id="@+id/Progress_bar4"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Progress_bar3"
        android:layout_marginEnd="33dp"
        android:max="100"
        android:min="0"
        android:progress="50" />

    <ProgressBar
        android:id="@+id/Progress_bar5"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Progress_bar4"
        android:layout_marginEnd="33dp"
        android:max="100"
        android:min="0"
        android:progress="60" />


    <Button
        android:id="@+id/button1"
        style="@style/TextViewStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:text="Следующий день"
        android:onClick="secondDay"/>


</RelativeLayout>



