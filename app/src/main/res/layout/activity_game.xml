<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.blackcode.ru.boss.GameActivity">


    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Progress_bar1"
        android:contentDescription="@string/ad"
        android:src="@android:drawable/btn_star"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Progress_bar2"
        android:contentDescription="@string/em"
        android:src="@android:drawable/btn_star"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/it"
        android:src="@android:drawable/btn_star"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Progress_bar4"
        android:contentDescription="@string/pd"
        android:src="@android:drawable/btn_star"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Progress_bar3"
        android:contentDescription="@string/of"
        android:src="@android:drawable/btn_star"/>

    <ProgressBar
        android:id="@+id/Progress_bar1"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="286dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="32dp"
        android:max="100"
        android:progress="50" />

    <ProgressBar
        android:id="@+id/Progress_bar2"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="286dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Progress_bar1"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="32dp"
        android:max="100"
        android:progress="50" />

    <ProgressBar
        android:id="@+id/Progress_bar3"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Progress_bar2"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="32dp"
        android:max="100"
        android:progress="50" />

    <ProgressBar
        android:id="@+id/Progress_bar4"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Progress_bar3"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="32dp"
        android:max="100"
        android:progress="50" />

    <ProgressBar
        android:id="@+id/Progress_bar5"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Progress_bar4"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="32dp"
        android:max="100"
        android:progress="50" />


    <Button
        android:id="@+id/button1"
        style="@style/TextViewStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:onClick="startDay"/>


</RelativeLayout>



